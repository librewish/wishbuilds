pkgname=garuda-wallpapers
pkgver=r2.7b850fd
pkgrel=1
pkgdesc="wallpaper collection"
arch=('any')
url="https://gitlab.com/garuda-linux/themes-and-settings/artwork/garuda-wallpapers"
license=('GPLv3')
makedepends=('git')
depends=()
source=("git+https://gitlab.com/garuda-linux/themes-and-settings/artwork/garuda-wallpapers.git")
sha256sums=('SKIP')

pkgver() {
	cd "$srcdir/garuda-wallpapers"

# Git, no tags available
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"

}

package() {
    cd ${pkgname}

    install -d ${pkgdir}/usr/share/wallpapers/garuda-wallpapers
    cp -r src/garuda-wallpapers/* ${pkgdir}/usr/share/wallpapers/garuda-wallpapers
}
 
